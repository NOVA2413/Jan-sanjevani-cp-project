<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graident"
    android:scrollbarSize="50dp"
    tools:context=".SigninBloodBank">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:gravity="center"
            android:orientation="vertical"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="112dp"
                android:fontFamily="@font/antic"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="new_organization_ragister_here"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints,NotSibling"
                android:layout_marginLeft="16dp" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/NewBloodBankname"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="375dp"
                android:layout_height="80dp"
                android:hint="name of organization"
                android:layout_marginTop="40dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/orgname"
                    android:layout_width="375dp"
                    android:layout_height="80dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/NewBloodBankusername"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="375dp"
                android:layout_height="80dp"
                android:hint="USER NAME">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/orgusername"
                    android:layout_width="375dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/NewBloodBankpass"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="375dp"
                android:layout_height="80dp"
                android:hint="SET  PASSWORD">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/orgpass"
                    android:layout_width="375dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="30dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/CreatenewBB"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="45dp"
                android:text="creater account" />

            <Button
                android:id="@+id/AlreadyragisBB"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="already ragistered AND signin" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>